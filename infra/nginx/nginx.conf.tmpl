worker_processes auto;
error_log /var/log/nginx/error.log warn;
pid /var/run/nginx.pid;

# 2025 improvement: graceful worker shutdown
worker_shutdown_timeout 10s;

events {
    worker_connections 1024;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;
    
    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';
    
    access_log /var/log/nginx/access.log main;
    
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    client_max_body_size 100M;
    
    # 2025 improvement: HTTP/2 for modern browsers
    http2 on;
    
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
    
    # Rate limiting zone for API protection
    limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;
    
    # Template-based upstream configuration using network aliases
    upstream whisnap_web {
        server ${UPSTREAM_PREFIX}-web:3000;
    }

    upstream whisnap_api {
        server ${UPSTREAM_PREFIX}-api:4000;
    }

    upstream whisnap_ws {
        server ${UPSTREAM_PREFIX}-api:4001;
    }
    
    # Production HTTP server
    server {
        listen 80;
        listen [::]:80;
        server_name whisnap.com www.whisnap.com;
        
        # Security headers
        server_tokens off;
        add_header X-Content-Type-Options nosniff;
        add_header X-Frame-Options DENY;
        
        location / {
            proxy_pass http://whisnap_web;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
            
            # 2025 improvement: upstream retry logic
            proxy_next_upstream error timeout http_502 http_503 http_504;
            proxy_next_upstream_tries 3;
        }
        
        # Express API endpoints (v1 prefix) with rate limiting
        location /api/v1/ {
            limit_req zone=api burst=20 nodelay;
            proxy_pass http://whisnap_api/v1/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
            
            # 2025 improvement: upstream retry logic
            proxy_next_upstream error timeout http_502 http_503 http_504;
            proxy_next_upstream_tries 3;
        }
        
        # Next.js API routes (auth, etc)
        location /api/ {
            proxy_pass http://whisnap_web/api/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # 2025 improvement: upstream retry logic
            proxy_next_upstream error timeout http_502 http_503 http_504;
            proxy_next_upstream_tries 3;
        }
        
        location /ws {
            proxy_pass http://whisnap_ws;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
        }
    }
    
    # Production HTTPS server
    server {
        listen 443 ssl;
        listen [::]:443 ssl;
        server_name whisnap.com www.whisnap.com;
        
        ssl_certificate /etc/nginx/ssl/fullchain.pem;
        ssl_certificate_key /etc/nginx/ssl/privkey.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers off;
        
        # 2025 improvement: HSTS security header
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
        add_header X-Content-Type-Options nosniff;
        add_header X-Frame-Options DENY;
        server_tokens off;
        
        # Optional: Next.js static assets caching (hashed files are immutable)
        location ^~ /_next/static/ {
            proxy_pass http://whisnap_web;
            expires 1y;
            add_header Cache-Control "public, max-age=31536000, immutable";
        }
        
        location / {
            proxy_pass http://whisnap_web;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_cache_bypass $http_upgrade;
            proxy_read_timeout 300s;
            
            # 2025 improvement: upstream retry logic
            proxy_next_upstream error timeout http_502 http_503 http_504;
            proxy_next_upstream_tries 3;
        }
        
        # Express API endpoints (v1 prefix) with rate limiting
        location /api/v1/ {
            limit_req zone=api burst=20 nodelay;
            proxy_pass http://whisnap_api/v1/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_read_timeout 300s;
            
            # 2025 improvement: upstream retry logic
            proxy_next_upstream error timeout http_502 http_503 http_504;
            proxy_next_upstream_tries 3;
        }
        
        # Next.js API routes (auth, etc)
        location /api/ {
            proxy_pass http://whisnap_web/api/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            
            # 2025 improvement: upstream retry logic
            proxy_next_upstream error timeout http_502 http_503 http_504;
            proxy_next_upstream_tries 3;
        }
        
        location /ws {
            proxy_pass http://whisnap_ws;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_read_timeout 300s;
        }
    }
}